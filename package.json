{
  "name": "pitch",
  "author": "Shun Kakinoki",
  "license": "MIT",
  "version": "6.5.7",
  "homepage": "https://github.com/shunkakinoki/pitch",
  "repository": {
    "type": "git",
    "url": "https://github.com/shunkakinoki/pitch.git"
  },
  "scripts": {
    "build": "reveal-md pitch/ --static reveal --absolute-url https://pitch.shunkakinoki.com --template reveal.html",
    "dev": "reveal-md pitch/ --absolute-url https://pitch.shunkakinoki.com --template reveal.html",
    "test": "yarn lint && yarn release-test",
    "release": "semantic-release",
    "release-test": "semantic-release -d",
    "lint": "yarn eclint-check && yarn prettier-check",
    "fix": "yarn eclint-fix && yarn prettier-fix",
    "eclint-check": "eclint check $(git ls-files)",
    "eclint-fix": "eclint fix $(git ls-files)",
    "prettier-check": "prettier --check \"**/*.{yml,yaml}\"",
    "prettier-fix": "prettier --write \"**/*.{yml,yaml}\""
  },
  "dependencies": {
    "reveal-md": "^4.1.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/exec": "^5.0.0",
    "commitizen": "^4.1.5",
    "eclint": "^2.8.1",
    "git-cz": "^4.7.0",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "semantic-release": "^17.1.1"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git-cz --hook || true"
    }
  }
}
