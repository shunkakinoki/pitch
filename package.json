{
  "name": "pitch",
  "author": "Shun Kakinoki",
  "license": "MIT",
  "version": "1.3.0",
  "homepage": "https://github.com/shunkakinoki/pitch",
  "repository": {
    "type": "git",
    "url": "https://github.com/shunkakinoki/pitch.git"
  },
  "scripts": {
    "build": "reveal-md src --static public --absolute-url https://pitch.shunkakinoki.com",
    "dev": "reveal-md src --absolute-url https://pitch.shunkakinoki.com",
    "test": "yarn lint && yarn release-test",
    "release": "semantic-release",
    "release-test": "semantic-release -d",
    "lint": "yarn eclint-check",
    "fix": "yarn eclint-fix",
    "eclint-check": "eclint check $(git ls-files)",
    "eclint-fix": "eclint fix $(git ls-files)"
  },
  "dependencies": {
    "reveal-md": "^3.4.6"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/exec": "^5.0.0",
    "commitizen": "^4.0.3",
    "eclint": "^2.8.1",
    "git-cz": "^4.3.1",
    "husky": "^4.2.3",
    "semantic-release": "^17.0.4"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git-cz --hook || true"
    }
  }
}
